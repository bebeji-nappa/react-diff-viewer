{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "types": [
      "node"
    ],
    "strict": false
  },
  "include": ["./src/*", "enzyme.js"],
  "exclude": ["node_modules"],
}
